<!doctype html>
<html>
  <head>
    <title>Music Signature</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" type="text/css" href="css/main.css">

    <style type="text/css">
      #loader {
        height: 50px;
        width: 50px;
        position: absolute;
        margin:auto;
        top: 0; left: 0; bottom: 0; right: 0;
        animation: rotate 2s linear infinite;
        transition: opacity 0.3s ease-out;
      }

      .path {
        stroke-dasharray: 1,200;
        stroke-dashoffset: 0;
        animation: dash 1.5s ease-in-out infinite, color 6s ease-in-out infinite;
        stroke-linecap: round;
        stroke: rgba(147,210,153,1);
      }

      @keyframes rotate {
        100% {
          transform: rotate(360deg);
        }
      }

      @keyframes dash {
        0% {
          stroke-dasharray: 1,200;
          stroke-dashoffset: 0;
        }
        50% {
          stroke-dasharray: 89,200;
          stroke-dashoffset: -35;
        }
        100% {
          stroke-dasharray: 89,200;
          stroke-dashoffset: -124;
        }
      }
      .container
      {
        position: relative;
        /*height: 100vh;*/
        margin: 0 auto;
        width: 100%;
        max-width: 800px;
        display: flex;
        justify-content: center;
        overflow: hidden;
        flex-direction: column;
      }
      #music-signature
      {
        max-width: 850px;
        max-height: 100%;
        align-self: center;
        transition: opacity 0.3s ease-out;
      }

      .name
      {
        font-family: GraphikBold;
        font-size: 60px;
      }
      .info
      {
        font-size: 40px;
        margin: 30px 0 0 0;
        line-height: 60px;
        /*font-family: GraphikBold;*/
      }

      .info span{font-family: GraphikBold}


      .fadeOut{opacity:0}
      .fadeIn{opacity:1}

    </style>
  </head>

  <body>

    <div class="container">
      <h2 class="name"></h2>
      <h3 class="info"></h3>
      <h3 class="info"></h3>
      <h3 class="info"></h3>
      <div id="loader">

        <svg id="circular" height="50" width="50">
          <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
        </svg>
      </div>
      <canvas id="music-signature" class="fadeOut" width="400" height="400"></canvas>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fetch/2.0.2/fetch.min.js"></script>
    <script src="./music-signature.js" type="text/javascript"></script>
    <script>
      window.onload = generateSignature(<%-JSON.stringify(accessToken) %>);
    </script>
  </body>
</html>

